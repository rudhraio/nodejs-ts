{
  "name": "nodejs-ts",
  "version": "1.0.0",
  "description": "backend wireframe with express and ts",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch '**/*.ts' --exec ts-node ./server.ts",
    "start": "node dist/server.js",
    "build": "tsc && copyfiles -u 1 src/views/** dist/src/"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "backend",
    "API"
  ],
  "author": "rudhraio",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^3.0.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
